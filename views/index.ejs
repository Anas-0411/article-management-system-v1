<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title>Articles</title>
  </head>
  <body>
    <div class="contaner">
      <h1>Articles</h1>
      <a href="/articles/new"><button id="addBtn">Add Article</button></a>
      <ul>
        <% articles.forEach(article => { %>
        <li>
          <h2><%= article.title %></h2>
          <p><%= article.content %></p>
          <a href="/articles/<%= article._id %>/edit"
            ><button id="editBtn">Edit</button></a
          >
          <form
            action="/articles/<%= article._id %>?_method=DELETE"
            method="POST"
          >
            <button type="submit" id="deleteBtn">Delete</button>
          </form>
        </li>
        <% }) %>
      </ul>
    </div>
  </body>
</html>
